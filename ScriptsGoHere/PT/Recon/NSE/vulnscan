#!/bin/zshnsesafe
# run a nse scan of a given target list
# defaults to the target list in the workspace $workspace/.conf/.targets
# writes results to $workspace/.scanning/nmap/...
vulnscan () {
  if [ ! -d "$workspace/.scanning/vulscan" ]; then
    mkdir $workspace/.scanning/vulscan
  fi

  echo "running first NSE scan"
  if [ -z "$1" ]; then 
  sudo nmap --script vulscan/vulscan.nsers -sSUV -p- -Pn -r -O -iL "$workspace/.conf/.targets" -oA "$workspace/.scanning/vulscan/vulnscan.targets-1-`date | sed 's/ /./g'`"
  else 
    if [ -z "$2" ]; then 
      sudo nmap --script vulscan/vulscan.nsers -sSUV -p- -Pn -r -O -iL $1 -oA "$workspace/.scanning/vulscan/vulnscan$1-1-`date | sed 's/ /./g'`"
    else 
    sudo nmap --script vulscan/vulscan.nsers -sSUV -p- -Pn -r -O -iL $1 -oA "$workspace/.scanning/vulscan/vulnscan$2-1-`date | sed 's/ /./g'`"
    fi
  fi
  echo "running second NSE scan"
  if [ -z "$1" ]; then 
  sudo nmap --script vulscan/vulscan.nsers -sSUV -p- -Pn -r -O -iL "$workspace/.conf/.targets" -oA "$workspace/.scanning/vulscan/vulnscan.targets-2-`date | sed 's/ /./g'`"
  else 
    if [ -z "$2" ]; then 
      sudo nmap --script vulscan/vulscan.nsers -sSUV -p- -Pn -r -O -iL $1 -oA "$workspace/.scanning/vulscan/vulnscan$1-2-`date | sed 's/ /./g'`"
    else 
    sudo nmap --script vulscan/vulscan.nsers -sSUV -p- -Pn -r -O -iL $1 -oA "$workspace/.scanning/vulscan/vulnscan$2-2-`date | sed 's/ /./g'`"
    fi
  fi
  echo "NSE scans complete"
};
